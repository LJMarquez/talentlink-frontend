  }
  button:hover {
    background-color: #0056b3;
  } */

  @media (max-width: 768px) {
    .form-container {
      padding: 1.5rem;
    }
    button {
      width: 100%;
    }
  }

  #container {
    display: block;
    margin-bottom: 1rem; /* Adds spacing between elements */
  }

  #languageSpecify {
    font-weight: bold;
    margin-bottom: 0.5rem; /* Adds spacing between label and select */
  }
  label {
    display: block;
    font-weight: bold;
    margin-bottom: 0.5rem; /* Adds spacing between label and select */
  }
  select {
    width: 100%;
    padding: 0.8rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
  }
  select:focus {
    outline: none;
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
  }

  textarea {
    width: 100%;
    padding: 0.8rem;
    margin-bottom: 1rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
  }

  textarea:focus {
    outline: none;
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
  }
  /* Specific styles for the radio component */
  .radio-group {
    display: flex;
    flex-direction: column; /* Stack the groups vertically */
    margin-bottom: 1rem;
  }

  .radio-option {
    display: flex;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .radio-option input[type="radio"] {
    margin-right: 0.5rem; /* Space between radio button and label */
  }

  /* Optional: Styling for the labels */
  .radio-option label {
    font-weight: normal;
    margin-bottom: 0;
  }

  /* Responsive adjustments for smaller screens */
  @media (max-width: 768px) {
    .radio-option {
      flex-direction: row; /* Display radio buttons and labels inline on smaller screens */
    }
  }

  /* Specific styling for the radio buttons and labels */
  .radio-group {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .radio-group label {
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .radio-item {
    display: inline-flex;
    align-items: center;
    margin-right: 1rem;
  }

  .radio-item input {
    margin-right: 0.5rem; /* Space between the radio button and label */
  }
</style>

<script>
  const phone = document.getElementById("phone") as HTMLInputElement | null;

  if (phone) {
    phone.addEventListener("input", function (e) {
      const inputElement = e.target as HTMLInputElement; // Type assertion to HTMLInputElement
      if (inputElement) {
        let value = inputElement.value.replace(/\D/g, ""); // Remove non-digit characters
        if (value.length > 10) {
          value = value.slice(0, 10); // Restrict to 10 digits
        }
        if (value.length > 3 && value.length <= 6) {
          value = value.replace(/(\d{3})(\d{1,})/, "$1-$2"); // Add dash after the first 3 digits
        } else if (value.length > 6) {
          value = value.replace(/(\d{3})(\d{3})(\d{1,})/, "$1-$2-$3"); // Add dash after the second 3 digits
        }
        inputElement.value = value;
      }
    });
  }

