---
import logo from "../../public/assets/talentlinklogo.svg";
---

<section class="career-section">
  <div class="container">
    <div class="header">
      <div class="logo">
        <img src={logo.src} alt="TalentLink Logo" />
      </div>
      <div class="tagline">Career Development Center</div>
      <h2 class="title">Bridging Education and Opportunity</h2>
      <p class="description">
        Our mission is to empower students with the resources and connections
        they need to launch successful careers.
      </p>
    </div>

    <div class="grid">
      <div class="card">
        <h3 class="card-title">For Students</h3>
        <ul class="card-list">
          <li>• Access to curated job postings</li>
          <li>• Career counseling services</li>
          <li>• Resume building workshops</li>
          <li>• Interview preparation</li>
        </ul>
      </div>

      <div class="card">
        <h3 class="card-title">For Employers</h3>
        <ul class="card-list">
          <li>• Direct access to talented students</li>
          <li>• Simple job posting process</li>
          <li>• Recruitment event opportunities</li>
          <li>• Partnership programs</li>
        </ul>
      </div>

      <div class="card">
        <h3 class="card-title">Our Impact</h3>
        <ul class="card-list">
          <li>• 90% student placement rate</li>
          <li>• 200+ employer partnerships</li>
          <li>• 1000+ annual job placements</li>
          <li>• Continuous career support</li>
        </ul>
      </div>
    </div>
  </div>
</section>

<style>
  .career-section {
    padding: 4rem 0;
    background-color: #f9fafb;
  }
  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  .header {
    text-align: center;
    margin-bottom: 3rem;
  }
  .logo {
    width: 20%;
    margin: auto;
    margin-bottom: 2rem;
  }
  .tagline {
    display: inline-block;
    background-color: rgba(9, 113, 233, 0.1);
    color: #0971e9;
    padding: 0.375rem 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
  }
  .title {
    font-size: 1.875rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
  }
  @media (min-width: 768px) {
    .title {
      font-size: 2.25rem;
    }
  }
  .description {
    color: #4b5563;
    max-width: 800px;
    margin: 0 auto;
  }
  .grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  @media (min-width: 768px) {
    .grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  .card {
    padding: 1.5rem;
  }
  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }
  .card-list {
    list-style: none;
    padding: 0;
    color: #4b5563;
  }
  .card-list li {
    margin-bottom: 0.75rem;
  }
</style>
