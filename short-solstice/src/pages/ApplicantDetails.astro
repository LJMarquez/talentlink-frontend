---
import Layout from "../layouts/Layout.astro";
import ApplicantDetailsBody from "../components/ApplicantDetailsBody";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Applicant Details | TalentLink">
  <NavBar />
  <main class="applicant-details-container">
    <h1>Applicant Details</h1>
    <ApplicantDetailsBody client:load />
  </main>
  <Footer />
</Layout>

<style>
  .applicant-details-container {
    max-width: 800px;
    margin: 0 auto;
    margin-top: 2rem;
    margin-bottom: 2rem;
    padding: 2rem 1rem;
    border: 1px solid rgba(211, 211, 211, 0.486);
    border-radius: 1.5rem;
  }

  h1 {
    color: #111827;
    font-size: 2rem;
    font-weight: 500;
    margin-bottom: 2rem;
  }
</style>
